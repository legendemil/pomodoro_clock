// ------------- Variables -----------------//
control-btn-size = 20px

make-white()
	outline none
	border none
	box-shadow 3px 3px 5px -3px black
	cursor pointer
	background none
	

// ------------- Global Styles ----------------//
*
	font-family: 'Exo', sans-serif;

::selection
	background #bbb
	color white
body
	background url('../img/background.jpg')
	background-repeat repeat
	margin 0 
	

#wrapper
	height 100vh
	background #fff
	width 800px
	max-width 90%
	margin 0 auto
	
// ------------- Header Styles ----------------//
header.site-title
	text-align center
	font-size 2rem
	color #bbb
	h1  
		margin 0
		padding-top 1rem

// ------------- Controls Styles ----------------//
section.controls-container
	padding .3rem 1.2rem
	.controls-box
		text-align center
		.controls
			text-align center
			display inline-block
			width 20%
			padding 1rem
			margin .5rem .4rem
			.controls-info
				button
					make-white()
					transform translateY(-30%)
					text-align center
					border-radius 100%
					width control-btn-size
					height control-btn-size
					cursor pointer
					
				.controls-value
					font-size 1.5rem
					margin 0 .5rem

			
// ------------- Main Styles ----------------//
section.main 
	.timer-box
		margin 0 auto
		text-align center
		button#startStop
			make-white()
			width 100px
			padding .4rem
			font-size 1.3rem
			font-weight 100

// ------------- footer Styles ----------------//
footer
	text-align center
	position fixed
	bottom 10px
	left 50%
	transform translateX(-50%)